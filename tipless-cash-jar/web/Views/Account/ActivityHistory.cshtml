@model tiplessCashJar.web.Models.TransactionHistoryViewModelList

@{
  ViewBag.Title = "ActivityHistory";
}


<section class="scrolling-section">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <h1>Account Activity History</h1>
      </div>
    </div>

    <div class="row">
      <div class="col-md-offset-2 col-lg-8">
        <table class="table table-striped table-bordered">
          <thead>
            <tr>
              <th class="text-center">Date</th>
              <th class="text-center">Time</th>
              <th class="text-center">Amount</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            @foreach (var tx in Model)
            {
              <tr data-id="@tx.Id">
                <th scope=row class="text-center">@tx.TxDate</th>
                <td>@tx.TxTime</td>
                <td>@tx.Amount</td>
                <td>
                  <a href="/recipient/profile/@tx.Id" class="tbn btn-info btn-sm">Info</a>
                </td>
              </tr>
            }
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>
