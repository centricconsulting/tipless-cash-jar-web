@{
  ViewBag.Title = "Home Page";
}

<section id="intro" class="scrolling-section intro-section">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 pull-left">
        <img style="max-width:100%; max-height:100%" src="~/Content/art/definition-white.png" />
      </div>
    </div>
  </div>
</section>

<section id="howitworks" class="scrolling-section">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <h1>HOW IT WORKS Section</h1>
      </div>
    </div>
  </div>
</section>

<section id="community" class="scrolling-section">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <h1>COMMUNITY Section</h1>
      </div>
    </div>
  </div>
</section>

<section id="aboutus" class="scrolling-section">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <h1>ABOUT US Section</h1>
      </div>
    </div>
  </div>
</section>

<section id="login" class="scrolling-section">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <h1>Welcome back, friend! Log in and let's get giving!</h1>
      </div>
    </div>

    <div class="row">
      <div class="col-md-offset-2 col-lg-8">
        <section id="loginForm">
          @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
          {
            @Html.AntiForgeryToken()
            <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                          @Html.Label("Your Email Address", new { @class = "col-md-4 control-label" })
                          <div class="col-md-8">
                            @Html.TextBox("Email", "", new { @class = "form-control" })
                            @Html.ValidationMessage("Email", "", new { @class = "text-danger" })
                          </div>
                        </div>
                        <div class="form-group">
                          @Html.Label("Password", new { @class = "col-md-4 control-label" })
                          <div class="col-md-8">
                            @Html.Password("Password", "", new { @class = "form-control" })
                            @Html.ValidationMessage("Password", "", new { @class = "text-danger" })
                          </div>
                        </div>
                        <div class="form-group">
                          <div class="col-md-offset-4 col-md-8">
                            <input type="submit" value="LOG IN" class="btn btn-primary btn-block" />
                          </div>
                        </div>
                        <p>
                          <a href="#">Forgot your password?</a>
                        </p>
          }
        </section>

      </div>
    </div>
  </div>
</section>

<section id="signup" class="scrolling-section" style="margin-bottom:400px;">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <h1>Joining is awesome, free, and easy. Give us some information and we'll set you up to give to others.</h1>
      </div>
    </div>

    <div class="row">
      <div class="col-md-offset-2 col-lg-8">
        <section id="loginForm">
          @using (Html.BeginForm("Register", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
          {
            @Html.AntiForgeryToken()
            <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                          @Html.Label("Full Name", new { @class = "col-md-4 control-label" })
                          <div class="col-md-8">
                            @Html.TextBox("Name", "", new { @class = "form-control" })
                            @Html.ValidationMessage("Name", "", new { @class = "text-danger" })
                          </div>
                        </div>
                        <div class="form-group">
                          @Html.Label("Address", new { @class = "col-md-4 control-label" })
                          <div class="col-md-8">
                            @Html.TextBox("Address1", "", new { @class = "form-control" })
                            @Html.ValidationMessage("Address1", "", new { @class = "text-danger" })
                          </div>
                        </div>
                        <div class="form-group">
                          @Html.Label(" ", new { @class = "col-md-4 control-label" })
                          <div class="col-md-8">
                            @Html.TextBox("Address2", "", new { @class = "form-control" })
                            @Html.ValidationMessage("Address2", "", new { @class = "text-danger" })
                          </div>
                        </div>
                        <div class="form-group">
                          @Html.Label("City", new { @class = "col-md-4 control-label" })
                          <div class="col-md-4">
                            @Html.TextBox("City", "", new { @class = "form-control" })
                            @Html.ValidationMessage("City", "", new { @class = "text-danger" })
                          </div>
                        </div>
                        <div class="form-group">
                          @Html.Label("State", new { @class = "col-md-4 control-label" })
                          <div class="col-md-2">
                            @Html.TextBox("State", "", new { @class = "form-control" })
                            @Html.ValidationMessage("State", "", new { @class = "text-danger" })
                          </div>
                          @Html.Label("Zip", new { @class = "col-md-1 control-label" })
                          <div class="col-md-2">
                            @Html.TextBox("Zip", "", new { @class = "form-control" })
                            @Html.ValidationMessage("Zip", "", new { @class = "text-danger" })
                          </div>
                        </div>
                        <div class="form-group">
                          @Html.Label("Email Address", new { @class = "col-md-4 control-label" })
                          <div class="col-md-4">
                            @Html.TextBox("Email", "", new { @class = "form-control" })
                            @Html.ValidationMessage("Email", "", new { @class = "text-danger" })
                          </div>
                        </div>

                        <div class="form-group">
                          <div class="col-md-offset-4 col-md-8">
                            <input type="submit" value="SIGN UP AND CONTINUE" class="btn btn-primary btn-block" />
                          </div>
                        </div>
          }
        </section>

      </div>
    </div>
  </div>
</section>